@model Ticket


<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create New Task</h2>
            <hr/>
        </div>
        <div class="mb-3 p-1 row">
            <label asp-for="TaskName" class="p-0"></label>
            <input asp-for="TaskName" type="text" class="form-control"/>
            <span asp-validation-for="TaskName" class="text-danger"></span>
        </div>
        <div class="mb-3 p-1 row">
            <label asp-for="TaskDescription" class="p-0"></label>
            <input asp-for="TaskDescription" class="form-control"/>
            <span asp-validation-for="TaskDescription" class="text-danger"></span>
        </div>
        <div class="mb-3 p-1 row">
                    <label asp-for="TaskStatusId" class="p-0"></label>
                    <input asp-for="TaskStatusId" type="text" class="form-control"/>
                    <span asp-validation-for="TaskStatusId" class="text-danger"></span>
                    </div>
        <div class="mb-3 p-1 row">
            <label asp-for="TaskType" class="p-0"></label>
            <input asp-for="TaskType" class="form-control"/>
            <span asp-validation-for="TaskType" class="text-danger"></span>
        </div>
        <div class="mb-3 p-1 row">
            <label asp-for="TaskPriority" class="p-0"></label>
            <input asp-for="TaskPriority" class="form-control"/>
            <span asp-validation-for="TaskPriority" class="text-danger"></span>
        </div>
        <div class="mb-3 p-1 row">
            <label asp-for="TaskAssignedUserId" class="p-0"></label>
            <input asp-for="TaskAssignedUserId" type="text" class="form-control"/>
            <span asp-validation-for="TaskAssignedUserId" class="text-danger"></span>
        </div>
        
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Create</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Ticket" asp-action="Index" class="btn btn-secondary form-control" >Back to List</a>
            </div>
        </div>
    </div>
</form>